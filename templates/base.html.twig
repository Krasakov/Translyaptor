<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/base.css') }}">
        {% endblock %}
        <title>{% block title %}Translyaptor{% endblock %}</title>
        <style>
        </style>
    </head>
    <body>
        <div class="container">
            <header>
                <div class="row header">
                    <div class="col-2">
                        <a class="btn" style="color: red" href="{{ path('index') }}" role="button">LOGO</a>
                    </div>
                    <div class="col-8 text-center">
                        <a
                            class="menu-links"
                            href="{{ path('create_words') }}">Work with text
                        </a><a
                            class="menu-links"
                            href="#">Work with words
                        </a><a
                            class="menu-links"
                            href="#">Analytics
                        </a>
                    </div>
                    <div class="col-2">
                        <a
                            class="authorization-links"
                            href="#">Sing in
                        </a><a
                            class="authorization-links"
                            href="#">Sing up
                        </a>
                    </div>
                </div>
            </header>
            <main>
                <div class="row main">
                    {% block body %}{% endblock %}
                </div>
            </main>
            <footer>
                <div class="row footer">
                    <div class="col-2">
                        <a class="info-links" href="#">About us</a>
                        <a class="info-links" href="#">Contact us</a>
                        <a class="info-links" href="#">Terms of use</a>
                    </div>
                    <div class="col-2 offset-8 text-right" style="padding-top: 70px; font-size: 11pt; color: #6c757d">
                        &#169 2020
                    </div>
                </div>
            </footer>
        </div>
        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.5.0.min.js') }}" crossorigin="anonymous"></script>
            <script src="{{ asset('js/popper.min.js') }}" crossorigin="anonymous"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}" crossorigin="anonymous">
            </script>
        {% endblock %}
    </body>
</html>
